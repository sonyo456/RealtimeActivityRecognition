<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ksnu.dsem.realtimeactivityrecognition">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
